<!-- Spawn Sheet Header -->
<div class="sheet-header-wrapper spawn-header">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Spawn Name" />
      </h1>
      
      <!-- Base Creature Row -->
      <div class="header-line-base">
        {{> "systems/z-wolf-epic/templates/actor/partials/base-creature-selector.hbs"}}
      </div>
      
      <!-- Level, Size, Tags Row -->
      <div class="header-line-2">
        <div class="header-field level-field">
          <label>Level</label>
          <input type="number" name="system.level" value="{{system.level}}" min="0" max="20" />
        </div>
        <div class="header-field size-field">
          <label>Size</label>
          <select name="system.size" value="{{system.size}}">
            {{#if baseCreature.system.size}}
              <option value="{{baseCreature.system.size}}" selected>{{capitalize baseCreature.system.size}} (from base)</option>
            {{else}}
              <option value="medium" {{#if (eq system.size "medium")}}selected{{/if}}>Medium</option>
              <option value="small" {{#if (eq system.size "small")}}selected{{/if}}>Small</option>
              <option value="large" {{#if (eq system.size "large")}}selected{{/if}}>Large</option>
            {{/if}}
          </select>
        </div>
        <div class="header-field tags-field">
          <label>Tags</label>
          <div class="tags-display">{{characterTags}}</div>
        </div>
      </div>
    </div>
  </header>

  <!-- Header Resources -->
  <div class="header-resources spawn-resources">
    <div class="resource">
      <label>VP</label>
      <div class="resource-values">
        <input type="number" name="system.vitalityPoints.value" value="{{system.vitalityPoints.value}}" />
        <span class="sep">/</span>
        <span class="max-value">{{calculatedValues.maxVitality}}</span>
      </div>
    </div>
    
    <div class="resource">
      <label>SP</label>
      <div class="resource-values">
        <input type="number" name="system.staminaPoints.value" value="{{system.staminaPoints.value}}" />
        <span class="sep">/</span>
        <span class="max-value">{{system.staminaPoints.max}}</span>
      </div>
    </div>
    
    <div class="resource coast-number">
      <label>CN</label>
      <div class="resource-value-single">
        <span class="calculated-value">{{calculatedValues.coastNumber}}</span>
      </div>
    </div>
    
    <div class="resource speed-resource">
      <label>Speed</label>
      <div class="resource-value-single">
        <div class="speed-with-roll">
          <span class="static-value">+0</span>
          <i class="fas fa-dice-d12 speed-roll-die" 
            data-modifier="0" 
            data-flavor="Speed Check"
            title="Roll Speed Check (+0)"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Spawn TNs (separate Toughness and Destiny) -->
  <div class="header-tns spawn-tns">
    <div class="tn-group tn-group-spawn">
      <div class="tn-item">
        <label>Toughness TN</label>
        <div class="tn-value">{{tns.toughness}}</div>
      </div>
      
      <div class="tn-item">
        <label>Destiny TN</label>
        <div class="tn-value">{{tns.destiny}}</div>
      </div>
    </div>
  </div>
</div>
