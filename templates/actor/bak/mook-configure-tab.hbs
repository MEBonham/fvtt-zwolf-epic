<!-- Mook Configure Tab -->
<div class="tab configure mook-configure" data-group="primary" data-tab="configure">

  <h3>Mook Configuration</h3>

  <div class="build-sections mook-build">

    <!-- Base Creature Link Section -->
    <div class="build-category base-creature-link">
      <h4>Base Creature Link</h4>
      <div class="base-creature-info">
        {{#if baseCreature}}
          <div class="linked-creature">
            <img class="creature-image" src="{{baseCreature.img}}" alt="{{baseCreature.name}}" />
            <div class="creature-details">
              <div class="creature-name">{{baseCreature.name}}</div>
              <div class="creature-type">{{capitalize baseCreature.type}} - Level {{baseCreature.system.level}}</div>
              <div class="creature-inheritance">
                <span class="inheritance-note">
                  <i class="fas fa-info-circle"></i>
                  This mook inherits basic stats and abilities from the base creature
                </span>
              </div>
            </div>
            <div class="creature-controls">
              <button type="button" class="view-base-creature-btn" data-actor-id="{{baseCreature._id}}" title="View {{baseCreature.name}}">
                <i class="fas fa-external-link-alt"></i>
              </button>
            </div>
          </div>
        {{else}}
          <div class="no-base-creature">
            <i class="fas fa-exclamation-triangle"></i>
            <span>No base creature selected. Use the dropdown in the header to select one.</span>
          </div>
        {{/if}}
      </div>
    </div>

    <!-- Mook Progression Assignment -->
    <div class="build-category mook-progressions">
      <h4>Progression Assignments</h4>
      <div class="mook-progression-config">
        <div class="progression-note">
          <i class="fas fa-info-circle"></i>
          <span>Mooks use a simplified progression system with only Poor and Good progressions.</span>
        </div>
        
        <!-- Poor Progression Stats -->
        <div class="config-section">
          <h5><i class="fas fa-arrow-down"></i> Poor Progression</h5>
          <div class="progression-stats-assignment">
            <div class="stat-assignment-grid">
              <div class="stat-assignment-row">
                <label>Attributes:</label>
                <div class="stat-checkboxes">
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.poor.agility" {{#if system.progressionAssignments.poor.agility}}checked{{/if}} />
                    Agility
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.poor.fortitude" {{#if system.progressionAssignments.poor.fortitude}}checked{{/if}} />
                    Fortitude
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.poor.perception" {{#if system.progressionAssignments.poor.perception}}checked{{/if}} />
                    Perception
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.poor.willpower" {{#if system.progressionAssignments.poor.willpower}}checked{{/if}} />
                    Willpower
                  </label>
                </div>
              </div>
              
              <div class="stat-assignment-row">
                <label>Skills:</label>
                <div class="stat-checkboxes skills-checkboxes">
                  {{#each system.skills as |skill skillKey|}}
                    <label class="checkbox-label">
                      <input type="checkbox" name="system.progressionAssignments.poor.{{skillKey}}" {{#if (lookup ../system.progressionAssignments.poor skillKey)}}checked{{/if}} />
                      {{capitalize skillKey}}
                    </label>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Good Progression Stats -->
        <div class="config-section">
          <h5><i class="fas fa-arrow-up"></i> Good Progression</h5>
          <div class="progression-stats-assignment">
            <div class="stat-assignment-grid">
              <div class="stat-assignment-row">
                <label>Attributes:</label>
                <div class="stat-checkboxes">
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.good.agility" {{#if system.progressionAssignments.good.agility}}checked{{/if}} />
                    Agility
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.good.fortitude" {{#if system.progressionAssignments.good.fortitude}}checked{{/if}} />
                    Fortitude
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.good.perception" {{#if system.progressionAssignments.good.perception}}checked{{/if}} />
                    Perception
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="system.progressionAssignments.good.willpower" {{#if system.progressionAssignments.good.willpower}}checked{{/if}} />
                    Willpower
                  </label>
                </div>
              </div>
              
              <div class="stat-assignment-row">
                <label>Skills:</label>
                <div class="stat-checkboxes skills-checkboxes">
                  {{#each system.skills as |skill skillKey|}}
                    <label class="checkbox-label">
                      <input type="checkbox" name="system.progressionAssignments.good.{{skillKey}}" {{#if (lookup ../system.progressionAssignments.good skillKey)}}checked{{/if}} />
                      {{capitalize skillKey}}
                    </label>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Abilities Section -->
    <div class="build-category additional-abilities">
      <h4><i class="fas fa-plus"></i> Additional Abilities</h4>
      <div class="additional-abilities-info">
        <p>Mooks can have additional abilities beyond those inherited from their base creature. These can be added through normal item management.</p>
        <div class="ability-summary">
          <div class="ability-count-display">
            <span class="ability-count-item">Passive: {{abilityCategories.passive.length}}</span>
            <span class="ability-count-item">Dominant: {{math abilityCategories.dominantAction.length "+" abilityCategories.strike.length}}</span>
            <span class="ability-count-item">Swift: {{abilityCategories.swiftAction.length}}</span>
            <span class="ability-count-item">Reaction: {{abilityCategories.reaction.length}}</span>
            <span class="ability-count-item">Free: {{abilityCategories.free.length}}</span>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
