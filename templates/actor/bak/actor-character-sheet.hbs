<form class="{{cssClass}}" autocomplete="off">
  
  {{> "systems/z-wolf-epic/templates/actor/partials/character-sheet-header.hbs"}}

  <div class="sheet-container">
    
    {{> "systems/z-wolf-epic/templates/actor/partials/character-sheet-sidebar.hbs"}}

    <div class="sheet-main-content">
      
      <!-- Navigation Tabs -->
      <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="main">Main</a>
        <a class="item" data-tab="biography">Biography</a>
        <a class="item" data-tab="inventory">Inventory</a>
        <a class="item" data-tab="configure">Configure</a>
      </nav>

      <section class="sheet-body">
        <div class="tab main active" data-group="primary" data-tab="main">
          {{> "systems/z-wolf-epic/templates/actor/partials/character-sheet-main-tab.hbs"}}
        </div>

        <div class="tab biography" data-group="primary" data-tab="biography">
          {{> "systems/z-wolf-epic/templates/actor/partials/character-sheet-biography-tab.hbs"}}
        </div>

        <div class="tab inventory" data-group="primary" data-tab="inventory">
          {{> "systems/z-wolf-epic/templates/actor/partials/character-sheet-inventory-tab.hbs"}}
        </div>

        <div class="tab configure" data-group="primary" data-tab="configure">
          {{> "systems/z-wolf-epic/templates/actor/partials/character-sheet-configure-tab.hbs"}}
        </div>
      </section>
    </div>
  </div>
</form>
