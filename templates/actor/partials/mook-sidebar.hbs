<!-- Mook Progressions Sidebar -->
<!-- Simplified sidebar for mooks with only Poor and Good progressions -->
<aside class="progressions-sidebar mook-sidebar">
  <div class="progressions-container">
    
    <!-- Poor Progression -->
    <div class="progression-group poor" data-progression="poor">
      <div class="progression-header">
        <span class="progression-name">
          <i class="fas fa-dice-d12 progression-die" 
            data-progression="poor" 
            data-bonus="{{progressions.poor.bonus}}"
            title="Roll Poor Progression ({{#if (gte progressions.poor.bonus 0)}}+{{/if}}{{progressions.poor.bonus}})"></i>
          Poor
        </span>
        <span class="progression-bonus">{{#if (gte progressions.poor.bonus 0)}}+{{/if}}{{progressions.poor.bonus}}</span>
      </div>
      <div class="progression-content">
        <div class="progression-stats">
          {{#if progressions.poor.stats.length}}
            {{#each progressions.poor.stats as |stat|}}
            <div class="stat-item">
              <div class="stat-rollable" data-stat="{{stat.key}}" data-type="{{stat.type}}" data-progression="poor">
                <span class="stat-icon {{stat.type}}"></span>
                <span class="stat-name">{{stat.name}}</span>
              </div>
              <span class="stat-value">{{#if (gte stat.value 0)}}+{{/if}}{{stat.value}}</span>
            </div>
            {{/each}}
          {{else}}
            <div class="stat-placeholder">No stats assigned yet</div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- Good Progression -->
    <div class="progression-group good" data-progression="good">
      <div class="progression-header">
        <span class="progression-name">
          <i class="fas fa-dice-d12 progression-die" 
            data-progression="good" 
            data-bonus="{{progressions.good.bonus}}"
            title="Roll Good Progression ({{#if (gte progressions.good.bonus 0)}}+{{/if}}{{progressions.good.bonus}})"></i>
          Good
        </span>
        <span class="progression-bonus">{{#if (gte progressions.good.bonus 0)}}+{{/if}}{{progressions.good.bonus}}</span>
      </div>
      <div class="progression-content">
        <div class="progression-stats">
          {{#if progressions.good.stats.length}}
            {{#each progressions.good.stats as |stat|}}
            <div class="stat-item">
              <div class="stat-rollable" data-stat="{{stat.key}}" data-type="{{stat.type}}" data-progression="good">
                <span class="stat-icon {{stat.type}}"></span>
                <span class="stat-name">{{stat.name}}</span>
              </div>
              <span class="stat-value">{{#if (gte stat.value 0)}}+{{/if}}{{stat.value}}</span>
            </div>
            {{/each}}
          {{else}}
            <div class="stat-placeholder">No stats assigned yet</div>
          {{/if}}
        </div>
      </div>
    </div>
    
  </div>
</aside>
