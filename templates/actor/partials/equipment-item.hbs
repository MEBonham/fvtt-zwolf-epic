{{!-- templates/actor/partials/equipment-item.hbs --}}
{{!-- 
  Reusable equipment item display
  
  Parameters:
  - item: Equipment item data
--}}
<div class="equipment-item {{#unless item.placementValid}}invalid-placement{{/unless}}" 
     data-item-id="{{item._id}}">
  <img class="item-image" src="{{item.img}}" alt="{{item.name}}" />
  
  <div class="item-info">
    <div class="item-name">
      {{item.name}}
      {{#if item.attunementTier}}
        <span class="attunement-stars {{#unless item.attunementActive}}inactive{{/unless}}" 
              title="{{#if item.attunementActive}}{{localize 'ZWOLF.AttunementTier'}} {{item.attunementTier}}{{else}}{{localize 'ZWOLF.AttunementInactive'}}{{/if}}">
          {{#each (range 1 (add item.attunementTier 1)) as |star|}}
            <i class="fas fa-star"></i>
          {{/each}}
        </span>
      {{/if}}
    </div>
    <div class="item-details">
      {{#if item.system.bulk}}<span><i class="fas fa-weight-hanging"></i> {{item.system.bulk}}</span>{{/if}}
      {{#if item.system.price}}<span><i class="fas fa-coins"></i> {{item.system.price}}</span>{{/if}}
      {{#if item.system.quantity}}{{#if (gt item.system.quantity 1)}}<span><i class="fas fa-layer-group"></i> x{{item.system.quantity}}</span>{{/if}}{{/if}}
    </div>
    <div class="item-placement">
      <select class="equipment-placement-select" data-item-id="{{item._id}}">
        <option value="wielded" {{#if (eq item.system.placement "wielded")}}selected{{/if}}>
          {{localize "ZWOLF.Wielded"}}
        </option>
        <option value="worn" {{#if (eq item.system.placement "worn")}}selected{{/if}}>
          {{localize "ZWOLF.Worn"}}
        </option>
        <option value="readily_available" {{#if (eq item.system.placement "readily_available")}}selected{{/if}}>
          {{localize "ZWOLF.ReadilyAvailable"}}
        </option>
        <option value="stowed" {{#if (eq item.system.placement "stowed")}}selected{{/if}}>
          {{localize "ZWOLF.Stowed"}}
        </option>
        <option value="not_carried" {{#if (eq item.system.placement "not_carried")}}selected{{/if}}>
          {{localize "ZWOLF.NotCarried"}}
        </option>
      </select>
    </div>
  </div>
  
  <div class="item-controls">
    <a class="item-control" data-action="editItem" title="{{localize 'ZWOLF.Edit'}}">
      <i class="fas fa-edit"></i>
    </a>
    <a class="item-control" data-action="deleteItem" title="{{localize 'ZWOLF.Delete'}}">
      <i class="fas fa-trash"></i>
    </a>
  </div>
</div>
