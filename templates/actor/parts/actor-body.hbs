<div class="sheet-container {{#if isSpawn}}spawn-container{{/if}}">
  {{> systems/z-wolf-epic/templates/actor/parts/actor-sidebar}}
  
  <div class="sheet-main-content {{#if isSpawn}}spawn-main{{/if}}">
    {{#if showTabs}}
      <nav class="sheet-tabs tabs" data-group="primary">
        {{#each tabs as |tab|}}
          <a class="item {{tab.cssClass}}" data-tab="{{tab.id}}">{{tab.label}}</a>
        {{/each}}
      </nav>
    {{/if}}
    
    <section class="sheet-body {{#if isSpawn}}spawn-body{{/if}}">
      {{#if isSpawn}}
        {{> systems/z-wolf-epic/templates/actor/parts/actor-abilities}}
      {{else}}
        <div class="tab main active" data-group="primary" data-tab="main">
          {{> systems/z-wolf-epic/templates/actor/parts/actor-main-tab}}
        </div>
        
        {{#if showBiography}}
          <div class="tab biography" data-group="primary" data-tab="biography">
            {{> systems/z-wolf-epic/templates/actor/parts/actor-biography-tab}}
          </div>
        {{/if}}
        
        {{#if showInventory}}
          <div class="tab inventory" data-group="primary" data-tab="inventory">
            {{> systems/z-wolf-epic/templates/actor/parts/actor-inventory-tab}}
          </div>
        {{/if}}
        
        {{#if showConfigure}}
          <div class="tab configure" data-group="primary" data-tab="configure">
            {{> systems/z-wolf-epic/templates/actor/parts/actor-configure-tab}}
          </div>
        {{/if}}
      {{/if}}
    </section>
  </div>
</div>
