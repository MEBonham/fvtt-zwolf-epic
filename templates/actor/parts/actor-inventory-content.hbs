{{!-- templates/actor/parts/actor-inventory-content.hbs --}}
<div class="tab inventory {{#if (eq currentTab 'inventory')}}active{{/if}}" 
     data-group="primary" 
     data-tab="inventory" 
     data-part-id="tab-inventory">
  <div class="inventory-container">
    
    <!-- Inventory Summary -->
    <div class="inventory-summary">
      <div class="bulk-section">
        <label class="summary-label">{{localize "ZWOLF.TotalBulk"}}:</label>
        <span class="bulk-display {{#if inventoryTotals.isOverBulk}}over-capacity{{else}}{{#if (gte inventoryTotals.bulk (multiply inventoryTotals.maxBulk 0.8))}}near-capacity{{/if}}{{/if}}">
          {{inventoryTotals.bulk}} / {{inventoryTotals.maxBulk}}
        </span>
      </div>
      
      <div class="wealth-section">
        <label class="summary-label">{{localize "ZWOLF.Wealth"}}:</label>
        <div class="wealth-input-group">
          <button type="button" class="wealth-loss-button" data-action="loseWealth" title="{{localize 'ZWOLF.LoseWealth'}}">
            <i class="fas fa-minus"></i>
          </button>
          <input type="number" name="system.wealth" value="{{system.wealth}}" min="0" />
          <button type="button" class="wealth-gain-button" data-action="gainWealth" title="{{localize 'ZWOLF.GainWealth'}}">
            <i class="fas fa-plus"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- Equipment Categories -->
    <div class="inventory-categories">
      {{#each (getEquipmentCategories) as |category|}}
        {{#with (lookup ../equipment category.key) as |categoryItems|}}
          {{#if categoryItems.length}}
            <div class="equipment-category">
              <h4 class="category-header">
                <i class="fas {{category.icon}}"></i>
                {{localize category.label}}
              </h4>
              <div class="equipment-list">
                {{#each categoryItems as |item|}}
                  {{> equipment-item item=item}}
                {{/each}}
              </div>
            </div>
          {{/if}}
        {{/with}}
      {{/each}}

      <!-- No Equipment Message -->
      {{#unless (hasAnyEquipment equipment)}}
        <div class="no-equipment-message">
          <p>
            <i class="fas fa-info-circle"></i>
            {{localize "ZWOLF.NoEquipment"}}
          </p>
        </div>
      {{/unless}}
    </div>

    <!-- Equipment Drop Zone - Split into Add and Buy -->
    <div class="equipment-drop-section">
      <h4>
        <i class="fas fa-plus-circle"></i>
        {{localize "ZWOLF.AddEquipment"}}
      </h4>
      <div class="equipment-drop-zones">
        <!-- Left: Free Add -->
        <div class="equipment-drop-zone drop-zone" 
             title="{{localize 'ZWOLF.DragEquipmentHere'}}">
          <div class="drop-prompt">
            <i class="fas fa-backpack"></i>
            <span>{{localize "ZWOLF.DragEquipmentHere"}}</span>
            <div class="drop-hint">{{localize "ZWOLF.EquipmentDropHint"}}</div>
          </div>
        </div>
        
        <!-- Right: Buy with Wealth -->
        <div class="equipment-buy-zone drop-zone" 
             title="{{localize 'ZWOLF.BuyEquipmentHere'}}">
          <div class="drop-prompt">
            <i class="fas fa-coins"></i>
            <span>{{localize "ZWOLF.BuyEquipmentHere"}}</span>
            <div class="drop-hint">{{localize "ZWOLF.BuyEquipmentHint"}}</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Attunements Section (GM Only) -->
    {{#if isGM}}
      <div class="attunements-section">
        <h3 class="section-header">
          <i class="fas fa-magic"></i>
          {{localize "ZWOLF.Attunements"}}
          <span class="attunement-info">({{attunementSlots.filled}}/{{attunementSlots.total}} {{localize "ZWOLF.Slots"}})</span>
        </h3>
        
        <div class="attunement-slots">
          {{#each attunementSlots.slots as |slot index|}}
            {{> attunement-slot 
                slotIndex=(add index 1)
                item=slot.item
                isOverextended=slot.isOverextended
                tier=slot.tier}}
          {{/each}}
        </div>
        
        {{#if attunementSlots.hasOverextended}}
          <div class="attunement-warning">
            <i class="fas fa-exclamation-triangle"></i>
            {{localize "ZWOLF.OverextendedAttunementWarning"}}
          </div>
        {{/if}}
      </div>
    {{/if}}
  </div>
</div>
