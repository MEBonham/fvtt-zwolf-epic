{{!-- templates/actor/parts/actor-biography-content.hbs --}}
<div class="tab biography {{#if (eq currentTab 'biography')}}active{{/if}}" 
     data-group="primary" 
     data-tab="biography" 
     data-part-id="tab-biography">
  {{#if isCharacter}}
    <div class="biography-content">
      
      <!-- Liabilities Section -->
      <div class="liabilities-section">
        <h3>{{localize "ZWOLF.Liabilities"}}</h3>
        <div class="form-group">
          <div class="form-fields">
            {{> rich-editor
                value=system.liabilities
                target="system.liabilities"
                editable=editable
                owner=owner
                placeholder="ZWOLF.NoLiabilities"}}
          </div>
        </div>
      </div>

      <!-- Languages Section (not for eidolons) -->
      {{#unless isEidolon}}
        <details class="languages-section">
          <summary class="languages-header">
            <i class="fas fa-chevron-right accordion-chevron"></i>
            <span class="languages-title">{{localize "ZWOLF.Languages"}}</span>
            <span class="language-count">({{localize "ZWOLF.Max"}}: {{languageLimit}})</span>
          </summary>
          <div class="languages-content">
            <div class="form-group">
              <div class="form-fields">
                {{> rich-editor
                    value=system.languages
                    target="system.languages"
                    editable=editable
                    owner=owner
                    placeholder="ZWOLF.NoLanguages"}}
              </div>
            </div>
          </div>
        </details>
      {{/unless}}

      <!-- Journey Abilities -->
      {{> ability-category 
          icon="fa-map"
          title="ZWOLF.JourneyAbilities"
          abilities=abilityCategories.journey}}

      <!-- Miscellaneous Abilities -->
      {{> ability-category 
          icon="fa-ellipsis-h"
          title="ZWOLF.MiscellaneousAbilities"
          abilities=abilityCategories.miscellaneous}}

      <!-- Notes Section -->
      <div class="notes-section">
        <h3>{{localize "ZWOLF.Notes"}}</h3>
        <div class="form-group">
          <div class="form-fields">
            {{> rich-editor
                value=system.notes
                target="system.notes"
                editable=editable
                owner=owner
                placeholder="ZWOLF.NoNotes"}}
          </div>
        </div>
      </div>
      
    </div>
  {{else}}
    <div class="biography-content">
      <div class="no-content-message">
        <i class="fas fa-info-circle"></i>
        <span>{{localize "ZWOLF.BiographyOnlyForCharacters"}}</span>
      </div>
    </div>
  {{/if}}
</div>
