<div class="tier-content" data-tier="{{tierNumber}}">
  <div class="tier-header">
    <h3>Tier {{tierNumber}}</h3>
    <p class="notes">Configure tier {{tierNumber}} of this track</p>
  </div>

  <!-- Talent Menu Section -->
  <div class="talent-menu">
    <div class="form-group">
      <label>Talent Menu</label>
      <div class="editor-container">
        {{editor tierData.talentMenu target=(concat "system.tiers.tier" tierNumber ".talentMenu") button=true owner=../owner editable=../editable}}
      </div>
      <p class="notes">List talents available at this tier</p>
    </div>
  </div>

  <!-- Character Tags -->
  <div class="form-group">
    <label>Character Tags</label>
    <input type="text" name="system.tiers.tier{{tierNumber}}.characterTags" value="{{join tierData.characterTags}}" placeholder="Tag1, Tag2"/>
    <p class="notes">Tags added to characters at this tier</p>
  </div>

  <!-- Side Effects Section -->
  <details class="tier-optional-content">
    <summary><i class="fas fa-cog"></i> Side Effects</summary>
    <div class="optional-content">
      {{> side-effects-form 
          sideEffects=tierData.sideEffects 
          pathPrefix=(concat "system.tiers.tier" tierNumber ".sideEffects")}}
    </div>
  </details>

  <!-- Granted Abilities Section -->
  <details class="tier-optional-content" data-tier="{{tierNumber}}">
    <summary><i class="fas fa-magic"></i> Granted Abilities</summary>
    <div class="optional-content">
      <div class="granted-abilities">
        <div class="abilities-header">
          <h4>Granted Abilities</h4>
          <a class="ability-control" data-action="add-tier-ability" data-tier="{{tierNumber}}" title="Add Ability">
            <i class="fas fa-plus"></i>
          </a>
        </div>
        
        <div class="abilities-list">
          {{#each tierData.grantedAbilities as |ability index|}}
          {{> ability-item 
              ability=ability 
              index=index 
              nameTarget=(concat "system.tiers.tier" ../tierNumber ".grantedAbilities." index ".name")
              tagsTarget=(concat "system.tiers.tier" ../tierNumber ".grantedAbilities." index ".tags")
              typeTarget=(concat "system.tiers.tier" ../tierNumber ".grantedAbilities." index ".type")
              descriptionTarget=(concat "system.tiers.tier" ../tierNumber ".grantedAbilities." index ".description")
              deleteAction="delete-tier-ability"
              tierNumber=../tierNumber
              editable=../editable}}
          {{/each}}
        </div>
      </div>
    </div>
  </details>
</div>