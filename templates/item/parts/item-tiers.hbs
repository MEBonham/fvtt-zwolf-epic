{{!-- templates/item/parts/item-tiers.hbs --}}
<div class="tab tiers-container" data-group="primary" data-tab="tiers" data-part-id="tab-tiers">
  <div class="track-tiers">
    <h3>{{localize 'ZWOLF.TrackTiers'}}</h3>
    <p class="section-description">
      {{localize 'ZWOLF.TiersTabDescription'}}
      <br>
      <em>{{localize 'ZWOLF.AbilitiesAndEffectsInOtherTabs'}}</em>
    </p>

    <div class="tiers-list">
      {{#each (range 1 6) as |tierNumber|}}
        {{#with (lookup ../system.tiers (concat "tier" tierNumber)) as |tierData|}}
          <div class="tier-section" data-tier="{{tierNumber}}">
            <div class="tier-header">
              <h4>
                <i class="fas fa-layer-group"></i>
                {{localize 'ZWOLF.Tier'}} {{tierNumber}}
              </h4>
            </div>

            <div class="tier-content">
              {{> tier-template
                  tierData=tierData
                  tierNumber=tierNumber
                  owner=../../owner
                  editable=../../editable}}
            </div>
          </div>
        {{/with}}
      {{/each}}
    </div>
  </div>
</div>
