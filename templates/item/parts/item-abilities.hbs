{{!-- templates/item/parts/item-abilities.hbs --}}
<div class="tab" data-group="primary" data-tab="abilities">
  <div class="granted-abilities">
    <div class="abilities-header">
      <h3>{{localize 'ZWOLF.GrantedAbilities'}}</h3>
      {{#if editable}}
      <a class="ability-control" data-action="add-ability" title="{{localize 'ZWOLF.AddAbility'}}">
        <i class="fas fa-plus"></i>
      </a>
      {{/if}}
    </div>
    
    <div class="abilities-list">
      {{#each grantedAbilitiesArray as |ability arrayIndex|}}
      {{> ability-item 
          ability=ability 
          index=ability.originalIndex
          nameTarget=(concat "system.grantedAbilities." ability.originalIndex ".name")
          tagsTarget=(concat "system.grantedAbilities." ability.originalIndex ".tags")
          typeTarget=(concat "system.grantedAbilities." ability.originalIndex ".type")
          descriptionTarget=(concat "system.grantedAbilities." ability.originalIndex ".description")
          deleteAction="delete-ability"
          editable=../editable}}
      {{else}}
      <div class="no-abilities">
        {{localize "ZWOLF.NoAbilitiesYet"}}
      </div>
      {{/each}}
    </div>
  </div>
</div>